rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin (check custom claim or specific email)
    // For now, we'll allow based on collections, but you should implement role-based access
    function isAdmin() {
      return isAuthenticated() && request.auth.token.email == "admin@manda2.com"; // EXAMPLE
    }

    // Rules for 'users' collection
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Rules for 'orders' collection (matches AppContext)
    match /orders/{orderId} {
      allow read, create: if isAuthenticated();
      allow update: if isAuthenticated();
    }

    // Rules for 'products' collection (Catalog)
    match /products/{productId} {
      allow read: if true; // Public catalog
      allow write: if isAuthenticated(); // Merchant/Admin
    }

    // Rules for 'chats' collection
    match /chats/{chatId} {
      allow read, write: if isAuthenticated();
      
      match /messages/{messageId} {
        allow read, write: if isAuthenticated();
      }
    }
    
    // Rules for 'transactions' collection
    match /transactions/{txId} {
      allow read, write: if isAuthenticated();
    }

    // Rules for 'merchants' collection
    match /merchants/{merchantId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Default rule: deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
